// This is your Prisma schema file
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ==========================================
// AUTHENTICATION & USERS
// ==========================================

model User {
  id                     String    @id @default(cuid())
  name                   String?
  email                  String    @unique
  emailVerified          DateTime?
  image                  String?
  password               String
  currentOrganizationId  String?   // Active organization
  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @updatedAt

  accounts               Account[]
  sessions               Session[]
  memberships            OrganizationMember[]
  currentOrganization    Organization? @relation("UserCurrentOrganization", fields: [currentOrganizationId], references: [id], onDelete: SetNull)
  auditLogs              AuditLog[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ==========================================
// MULTI-TENANT ORGANIZATION
// ==========================================

model Organization {
  id                String    @id @default(cuid())
  name              String
  slug              String    @unique  // URL-friendly identifier
  siret             String?   @unique
  address           String?
  city              String?
  postalCode        String?
  country           String    @default("France")
  phone             String?
  email             String?
  logo              String?

  // Subscription & Billing
  plan              String    @default("trial") // trial, starter, pro, enterprise
  trialEndsAt       DateTime?
  stripeCustomerId  String?   @unique

  // Metadata
  settings          Json?     // Organization-wide settings
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  // Relations
  members           OrganizationMember[]
  clients           Client[]
  invoices          Invoice[]
  quotes            Quote[]
  budgets           Budget[]
  scenarios         Scenario[]
  subscription      Subscription?
  auditLogs         AuditLog[]
  currentUsers      User[]    @relation("UserCurrentOrganization")

  @@index([slug])
}

model OrganizationMember {
  id             String   @id @default(cuid())
  organizationId String
  userId         String
  roleId         String
  invitedBy      String?  // userId who sent invitation
  invitedAt      DateTime @default(now())
  joinedAt       DateTime @default(now())
  status         String   @default("active") // pending, active, suspended
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  role           Role         @relation(fields: [roleId], references: [id], onDelete: Restrict)

  @@unique([organizationId, userId])
  @@index([userId])
  @@index([organizationId])
}

// ==========================================
// RBAC - ROLES & PERMISSIONS
// ==========================================

model Role {
  id          String   @id @default(cuid())
  name        String   // owner, admin, manager, editor, viewer
  displayName String   // "Owner", "Administrator", "Manager", etc.
  description String?
  isSystem    Boolean  @default(false) // System roles cannot be deleted
  priority    Int      @default(0)     // Higher = more permissions (owner = 100, viewer = 10)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  members     OrganizationMember[]
  permissions RolePermission[]

  @@unique([name])
  @@index([name])
}

model Permission {
  id          String   @id @default(cuid())
  resource    String   // client, invoice, budget, user, organization, etc.
  action      String   // create, read, update, delete, manage, export, etc.
  description String?
  createdAt   DateTime @default(now())

  roles       RolePermission[]

  @@unique([resource, action])
  @@index([resource])
}

model RolePermission {
  id           String   @id @default(cuid())
  roleId       String
  permissionId String
  createdAt    DateTime @default(now())

  role         Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@unique([roleId, permissionId])
  @@index([roleId])
}

// ==========================================
// BUSINESS ENTITIES (TENANT-SCOPED)
// ==========================================

// CRM - Clients
model Client {
  id             String   @id @default(cuid())
  organizationId String
  name           String
  email          String?
  phone          String?
  address        String?
  city           String?
  postalCode     String?
  country        String   @default("France")
  siret          String?
  type           String   @default("individual") // individual, company
  notes          String?
  status         String   @default("active") // active, inactive, prospect
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  invoices       Invoice[]
  quotes         Quote[]
  deals          Deal[]

  @@index([organizationId])
  @@index([organizationId, status])
}

// CRM - Sales Pipeline
model Deal {
  id           String    @id @default(cuid())
  clientId     String
  title        String
  amount       Float
  currency     String    @default("EUR")
  status       String    @default("prospecting") // prospecting, qualified, proposal, negotiation, won, lost
  probability  Int       @default(50) // 0-100
  expectedDate DateTime?
  notes        String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  client       Client    @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@index([clientId])
}

// Invoicing
model Invoice {
  id              String   @id @default(cuid())
  organizationId  String
  clientId        String
  quoteId         String?  // Reference to original quote if converted
  number          String
  date            DateTime @default(now())
  dueDate         DateTime
  status          String   @default("draft") // draft, sent, paid, overdue, cancelled
  subtotal        Float
  taxRate         Float    @default(20.0) // French TVA
  taxAmount       Float
  total           Float
  currency        String   @default("EUR")
  notes           String?
  paymentTerms    String?
  pdfUrl          String?
  isRecurring     Boolean  @default(false)
  recurringPeriod String?  // monthly, quarterly, yearly
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  organization    Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  client          Client       @relation(fields: [clientId], references: [id], onDelete: Cascade)
  quote           Quote?       @relation(fields: [quoteId], references: [id], onDelete: SetNull)
  items           InvoiceItem[]

  @@unique([organizationId, number])
  @@index([organizationId])
  @@index([organizationId, status])
  @@index([clientId])
  @@index([quoteId])
}

model InvoiceItem {
  id          String  @id @default(cuid())
  invoiceId   String
  description String
  quantity    Float
  unitPrice   Float
  taxRate     Float   @default(20.0)
  total       Float

  invoice     Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@index([invoiceId])
}

// Quotes (Devis)
model Quote {
  id              String   @id @default(cuid())
  organizationId  String
  clientId        String
  number          String
  date            DateTime @default(now())
  validUntil      DateTime // Date de validité du devis
  status          String   @default("draft") // draft, sent, accepted, rejected, expired, converted
  subtotal        Float
  taxRate         Float    @default(20.0)
  taxAmount       Float
  total           Float
  currency        String   @default("EUR")
  notes           String?
  terms           String?  // Conditions particulières
  pdfUrl          String?
  convertedAt     DateTime? // Date de conversion en facture
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  organization    Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  client          Client       @relation(fields: [clientId], references: [id], onDelete: Cascade)
  items           QuoteItem[]
  invoices        Invoice[]    // Factures générées depuis ce devis

  @@unique([organizationId, number])
  @@index([organizationId])
  @@index([organizationId, status])
  @@index([clientId])
}

model QuoteItem {
  id          String  @id @default(cuid())
  quoteId     String
  description String
  quantity    Float
  unitPrice   Float
  taxRate     Float   @default(20.0)
  total       Float

  quote       Quote @relation(fields: [quoteId], references: [id], onDelete: Cascade)

  @@index([quoteId])
}

// Financial Planning - Budgets
model Budget {
  id             String   @id @default(cuid())
  organizationId String
  name           String
  year           Int
  type           String   @default("annual") // monthly, quarterly, annual
  status         String   @default("active") // active, archived
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization   Organization     @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  categories     BudgetCategory[]

  @@index([organizationId])
}

model BudgetCategory {
  id       String  @id @default(cuid())
  budgetId String
  name     String
  type     String  // revenue, expense
  planned  Float
  actual   Float   @default(0)
  month    Int?    // 1-12 for monthly budgets
  quarter  Int?    // 1-4 for quarterly budgets

  budget   Budget  @relation(fields: [budgetId], references: [id], onDelete: Cascade)

  @@index([budgetId])
}

// Financial Planning - Scenarios
model Scenario {
  id             String   @id @default(cuid())
  organizationId String
  name           String
  description    String?
  type           String   @default("forecast") // forecast, what-if
  assumptions    String?  // JSON string
  results        String?  // JSON string
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId])
}

// Stripe Subscriptions
model Subscription {
  id                   String    @id @default(cuid())
  organizationId       String    @unique
  stripeSubscriptionId String    @unique
  stripePriceId        String
  stripeProductId      String
  status               String    // active, canceled, incomplete, incomplete_expired, past_due, paused, trialing, unpaid
  currentPeriodStart   DateTime
  currentPeriodEnd     DateTime
  cancelAtPeriodEnd    Boolean   @default(false)
  canceledAt           DateTime?
  trialStart           DateTime?
  trialEnd             DateTime?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  organization         Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
}

// ==========================================
// AUDIT & COMPLIANCE
// ==========================================

model AuditLog {
  id             String   @id @default(cuid())
  organizationId String
  userId         String?
  action         String   // user.created, client.updated, invoice.deleted, etc.
  resource       String   // user, client, invoice, etc.
  resourceId     String?
  metadata       Json?    // Additional context
  ipAddress      String?
  userAgent      String?
  createdAt      DateTime @default(now())

  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user           User?        @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([organizationId])
  @@index([userId])
  @@index([resource, resourceId])
  @@index([createdAt])
}
