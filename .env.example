# ===========================================
# TRAJECTORY - Variables d'environnement
# Configuration pour Vercel
# ===========================================

# Database (Supabase PostgreSQL)
# Format Supabase: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres
DATABASE_URL="postgresql://postgres.[project-ref]:[password]@aws-0-eu-west-3.pooler.supabase.com:6543/postgres?pgbouncer=true"
# Direct connection for Prisma migrations (without pgbouncer)
DIRECT_URL="postgresql://postgres.[project-ref]:[password]@aws-0-eu-west-3.pooler.supabase.com:5432/postgres"

# NextAuth
# En production, utiliser votre domaine Vercel ou custom domain
NEXTAUTH_URL="https://trajectory-app.com"
# Générer avec: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here-change-in-production"

# OAuth Providers (optionnel)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_ID=""
GITHUB_SECRET=""

# Email (Resend)
RESEND_API_KEY=""
FROM_EMAIL="noreply@trajectory-app.com"

# Rate Limiting (Upstash Redis - optionnel mais recommandé)
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# Monitoring (Sentry - optionnel)
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""
SENTRY_ORG=""
SENTRY_PROJECT=""

# Stripe (Paiements & Abonnements)
# Récupérer les clés: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""

# Stripe Price IDs (créer dans Stripe Dashboard)
# Starter: 49€/mois
STRIPE_PRICE_ID_STARTER=""
# Pro: 129€/mois  
STRIPE_PRICE_ID_PRO=""
# Enterprise: 299€/mois
STRIPE_PRICE_ID_ENTERPRISE=""

# App URL (important pour les redirections et webhooks)
NEXT_PUBLIC_APP_URL="https://trajectory-app.com"
